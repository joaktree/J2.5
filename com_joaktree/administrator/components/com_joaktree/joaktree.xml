<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension>
<extension type="component" version="2.5" method="new">
    <name>com_joaktree</name>
    <author>joaktree.com</author>
    <creationDate>September 2012</creationDate>
    <license>GNU/GPL</license>
    <version>1.4.3</version>
    <description>COM_JOAKTREE_DESC</description>

    <!-- user part -->
    <files folder="components/com_joaktree">
        <filename>controller.php</filename>
        <filename>index.html</filename>
        <filename>router.php</filename>
        <filename>joaktree.php</filename>
	    <folder>assets</folder>
		<folder>controllers</folder>
		<folder>helper</folder>
		<folder>models</folder>
		<folder>themes</folder>
		<folder>views</folder>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB.com_joaktree.ini</language>
    </languages>

    <!-- administration part -->
    <administration>

	    <menu 
	    	task="default" 
	    	img="components/com_joaktree/assets/images/icon-16-joaktree.png">COM_JOAKTREE</menu>
	    <submenu>
		<menu 
			img="components/com_joaktree/assets/images/icon-16-joaktree.png">JT_SUBMENU_CONTROLPANEL</menu>
		<menu 
			view="jt_applications"
			img="components/com_joaktree/assets/images/icon-16-app.png">JT_SUBMENU_APPLICATIONS</menu>
		<menu 
			view="jt_trees"
			img="components/com_joaktree/assets/images/icon-16-familytree.png">JT_SUBMENU_FAMILYTREES</menu>
		<menu 
			view="jt_persons"
			img="components/com_joaktree/assets/images/icon-16-person.png">JT_SUBMENU_PERSONS</menu>
		<menu 
			view="jt_maps"
			img="components/com_joaktree/assets/images/icon-16-map.png">JT_SUBMENU_MAPS</menu>
		<menu 
			view="jt_settings"
			layout="personname"
			img="components/com_joaktree/assets/images/icon-16-display2.png">JT_SUBMENU_PERSON_NAMEDISPLAY</menu>
		<menu 
			view="jt_settings"
			layout="personevent"
			img="components/com_joaktree/assets/images/icon-16-display1.png">JT_SUBMENU_PERSON_EVENTDISPLAY</menu>
		<menu 
			view="jt_settings"
			layout="relationevent"
			img="components/com_joaktree/assets/images/icon-16-display3.png">JT_SUBMENU_RELATION_EVENTDISPLAY</menu>
		<menu 
			view="jt_themes"
			img="components/com_joaktree/assets/images/icon-16-theme.png">JT_SUBMENU_THEMES</menu>
	    </submenu>
	
	    <files folder="administrator/components/com_joaktree">
		<filename>config.xml</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>joaktree.php</filename>
		<filename>access.xml</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>services</folder>
			<folder>tables</folder>
			<folder>views</folder>
	    </files>
	
	    <languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.com_joaktree.ini</language>
		<language tag="en-GB">en-GB.com_joaktree.gedcom.ini</language>
		<language tag="en-GB">en-GB.com_joaktree.services.ini</language>
		<language tag="en-GB">en-GB.com_joaktree.sys.ini</language>
	    </languages>

    </administration>
    
    <!-- installation part -->
    <installfile>install.joaktree.php</installfile>
    <uninstallfile>uninstall.joaktree.php</uninstallfile>

</extension>